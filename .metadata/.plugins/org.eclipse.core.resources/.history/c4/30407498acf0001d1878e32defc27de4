package com.poc.payload;

import org.springframework.http.HttpStatus;

public class ApiResposne {

	private String message;
	private HttpStatus status;
	private boolean success;
	
	public ApiResposne() {
		super();
	}

	public ApiResposne(String message, HttpStatus status) {
		super();
		this.message = message;
		this.status = status;
	}

	public ApiResposne(String message, HttpStatus status, boolean success) {
		super();
		this.message = message;
		this.status = status;
		this.success = success;
	}


}
